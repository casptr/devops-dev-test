@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudImage Src="logo.svg" ObjectFit="ObjectFit.Contain"></MudImage>
        <MudText Typo="Typo.h6" Class="ml-5">Blanche</MudText>
        <MudSpacer />
        <MudLink Typo="Typo.body1" Class="ml-5" Underline="Underline.None" Href="/">Home</MudLink>
        <MudLink Typo="Typo.body1" Class="ml-5" Underline="Underline.None" Href="/aanbod">Aanbod</MudLink>
        <MudLink Typo="Typo.body1" Class="ml-5" Underline="Underline.None" Href="/formules">Formules</MudLink>
        <MudLink Typo="Typo.body1" Class="ml-5" Underline="Underline.None" Href="/over-ons">Over ons</MudLink>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    // Charcoal = #252425
    // Forest = #303D38
    // Mustard = #C2983D
    // Putty = C2CCC5
    // Mushroom = #928A74

    private readonly MudTheme _currentTheme = new()
    {
            Palette = new PaletteLight()
            {
                Primary = "#C2983D",
                Secondary = "#303D38",
                Info = "#64a7e2",
                Success = Colors.Green.Accent1,
                Warning = Colors.Orange.Accent1,
                Error = Colors.Red.Accent1,
                AppbarBackground = "#928A74",
                TextPrimary = "#252425",
                TextSecondary = "#928A74",
                // more color properties
            },
    };
}
