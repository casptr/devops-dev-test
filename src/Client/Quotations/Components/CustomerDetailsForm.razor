@namespace Foodtruck.Client.Quotations
    <MudForm>
        <MudText Typo="Typo.h6">Klantgegevens</MudText>
        <MudTextField Label="Voornaam" @bind-Value="firstname" />
        <MudTextField Label="Familienaam" @bind-Value="lastname" />
        <MudTextField Label="Emailadres" @bind-Value="email" />
        <MudTextField Label="Telefoonnummer" @bind-Value="phone" />
        <MudTextField Label="Bedrijfsnaam" @bind-Value="companyName" />
        <MudTextField Label="Ondernemingsnummer" @bind-Value="companyNumber" />
        
        <MudText Typo="Typo.h6">Evenementgegevens</MudText>
        
        <MudText Typo="Typo.h6">Facturatieadres</MudText>
        <MudTextField Label="Straatnaam" @bind-Value="billingAddress_street" />
        <MudTextField Label="Huisnummer" @bind-Value="billingAddress_houseNumber" />
        <MudTextField Label="Postcode" @bind-Value="billingAddress_zip" />
        <MudTextField Label="Stad" @bind-Value="billingAddress_city" />
        
        <MudText Typo="Typo.h6">Evenementadres</MudText>
        <!-- Update these fields as needed -->
        <MudTextField Label="Straatnaam" @bind-Value="eventAddress_street" />
        <MudTextField Label="Huisnummer" @bind-Value="eventAddress_houseNumber" />
        <MudTextField Label="Postcode" @bind-Value="eventAddress_zip" />
        <MudTextField Label="Stad" @bind-Value="eventAddress_city" />
        
        <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="SubmitForm">Submit</MudButton>
    </MudForm>